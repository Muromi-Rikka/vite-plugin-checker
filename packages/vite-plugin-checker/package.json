{
  "name": "vite-plugin-checker",
  "version": "0.8.0",
  "description": "Vite plugin that runs TypeScript type checker on a separate process.",
  "keywords": [
    "vite",
    "vite-plugin",
    "typescript"
  ],
  "homepage": "https://github.com/fi3ework/vite-plugin-checker",
  "bugs": "https://github.com/fi3ework/vite-plugin-checker/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fi3ework/vite-plugin-checker.git"
  },
  "license": "MIT",
  "author": "fi3ework <fi3ework@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/main.d.ts",
      "import": "./dist/esm/main.js",
      "require": "./dist/cjs/main.js"
    }
  },
  "main": "./dist/cjs/main.js",
  "types": "./dist/esm/main.d.ts",
  "files": [
    "dist",
    "!dist/checkers/vueTsc/typescript-vue-tsc"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "build": "tsup && node ../../scripts/patchCjs.mjs",
    "build:test": "tsup --sourcemap inline"
  },
  "dependencies": {
    "@babel/code-frame": "^7.26.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "npm-run-path": "^4.0.1",
    "strip-ansi": "^6.0.1",
    "tiny-invariant": "^1.3.3",
    "tinyglobby": "^0.2.10",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/eslint": "^7.29.0",
    "@vue/language-core": "~2.2.2",
    "esbuild": "^0.25.0",
    "meow": "^13.2.0",
    "npm-run-all2": "^5.0.2",
    "stylelint": "^16.14.1",
    "tsup": "^6.7.0",
    "typescript": "^5.7.3",
    "vls": "^0.8.5",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vti": "^0.1.11",
    "vue-tsc": "~2.2.2"
  },
  "peerDependencies": {
    "@biomejs/biome": ">=1.7",
    "eslint": ">=7",
    "meow": "^13.2.0",
    "optionator": "^0.9.1",
    "stylelint": ">=16",
    "typescript": "*",
    "vite": ">=2.0.0",
    "vls": "*",
    "vti": "*",
    "vue-tsc": "~2.2.2"
  },
  "peerDependenciesMeta": {
    "@biomejs/biome": {
      "optional": true
    },
    "eslint": {
      "optional": true
    },
    "meow": {
      "optional": true
    },
    "optionator": {
      "optional": true
    },
    "stylelint": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vls": {
      "optional": true
    },
    "vti": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.16"
  }
}
